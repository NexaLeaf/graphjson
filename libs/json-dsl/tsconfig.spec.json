{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "types": ["jest", "node"],
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationMap": false
  },
  "include": [
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
